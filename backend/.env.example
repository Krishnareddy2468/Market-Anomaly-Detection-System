# =============================================================================
# Market Anomaly Detection System - Backend Configuration
# =============================================================================

# Application
APP_NAME="Market Anomaly Detection API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
# For development, using SQLite. For production, use PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fraud_db
DATABASE_URL=sqlite+aiosqlite:///./fraud_detection.db
DATABASE_ECHO=false

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Security
SECRET_KEY=change-this-in-production-use-secure-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Detection Engine Thresholds
RISK_THRESHOLD_HIGH=80.0
RISK_THRESHOLD_MEDIUM=50.0
RISK_THRESHOLD_LOW=20.0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# Observability
ENABLE_METRICS=true
METRICS_PATH=/metrics
